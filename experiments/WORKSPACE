new_local_repository(
    name = "tensorflow",
    path = "./tensorflow/bazel-bin/tensorflow/java",
    build_file_content = """
load("@rules_java//java:defs.bzl", "java_import")

filegroup(
    name = "lib-tensorflow",
    srcs = ["libtensorflow_jni.so"],
    visibility = ["//visibility:public"],
)

java_import(
  name = "tensorflow",
  visibility = ["//visibility:public"],
  jars = [
    "libtensorflow.jar"
  ],
)
"""
)
